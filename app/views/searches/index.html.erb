


<% if @recipes.nil? %>
  <div class="w-full flex justify-center">
      <p>no recipes found.</p>
      <p>You might have to go to supermarket</p>
  </div>
<% else %>
  <div>
    <div class="flow-root mt-6">
      <ul role="list" class="-my-5 divide-y divide-gray-200">
        <% @recipes.each do |recipe|%>
          <li class="py-4">
            <%= link_to recipe_path(recipe), class: "flex items-center space-x-4" do %>

                <div class="flex-shrink-0">
                  <!-- <img class="h-8 w-8 rounded-full" src="<%= recipe. %>" alt=""> -->
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-medium text-gray-900 truncate">
                    <%= recipe.name %>
                  </p>
                  <p class="text-sm text-gray-500 truncate">
                    @leonardkrasner
                  </p>
                </div>
                <div>
                  <a href="#" class="inline-flex items-center shadow-sm px-2.5 py-0.5 border border-gray-300 text-sm leading-5 font-medium rounded-full text-gray-700 bg-white hover:bg-gray-50">
                    View
                  </a>
                </div>

            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
<!-- This example requires Tailwind CSS v2.0+ -->



