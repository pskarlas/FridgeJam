<div class="max-w-2xl mx-auto -mt-40 bg-white py-6 px-6 rounded-lg shadow-lg">
  <% if @recipes.nil?%>
    <%= render partial: 'recipes/partials/top10' %>
  <% elsif @recipes.size.zero? %>
    <%= render partial: 'recipes/partials/no_recipes_found' %>
  <% elsif @recipes.size.positive? %>
    <h2 class="text-2xl font-bold text-gray-900">
      <%= pluralize(@recipes.length, 'recipe', 'recipes').to_s + ' ' + 'found'%>
    </h2>
    <div class="flow-root mt-10">
      <ul role="list" class="-my-5 divide-y divide-gray-200">
        <% @recipes.each do |recipe|%>
          <li class="py-4 ">
            <%= link_to recipe_path(recipe.id), class: " flex items-center space-x-4" do %>

                <div class="flex-shrink-0 bg-gray-50">
                  <img class="object-center object-cover  h-24 w-32 rounded-md" src="<%= recipe.image_url %>" alt="<%= recipe.name %>" title="<%= recipe.name %>">
                </div>
                <div class="flex-1 min-w-0  space-y-1">
                  <%= recipe.dificulty_badge %>
                  <div class="">
                    <p class="text-lg font-medium text-gray-900 truncate">
                      <%= recipe.name %>
                    </p>
                    <div class="flex items-center space-x-1 text-sm text-gray-500 truncate">
                      <span class="flex items-center">
                        <%= svg 'clock', class: 'w-4 h-4 mr-1' %>
                        <%= recipe.total_time %>
                      </span>
                      <span>&middot;</span>
                      <span>
                        Cooks for: <%= recipe.people_quantity %>
                      </span>
                    </div>
                  </div>
                </div>
                <div>
                  <span class="inline-flex items-center shadow-sm px-2.5 py-0.5 border border-gray-300 text-sm leading-5 font-medium rounded-full text-gray-700 bg-white hover:bg-gray-50">
                    View
                  </span>
                </div>

            <% end %>
          </li>
        <% end %>

      </ul>
    </div>
  <% end %>
 </div>



